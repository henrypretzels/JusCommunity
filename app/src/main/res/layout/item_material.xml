<?xml version="1.0" encoding="utf-8"?>
<!-- res/layout/item_study_material_card.xml -->
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/studyMaterialsCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <!-- O LinearLayout com os TextViews e o Button entraria aqui dentro -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Título da Seção -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="@string/study_materials_title"
            android:textColor="@color/text_primary"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- Descrição da Seção -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="@string/study_materials_description"
            android:textColor="@color/text_secondary"
            android:textSize="14sp" />

        <!-- Botão para Visualizar -->
        <Button
            android:id="@+id/viewStudyMaterialsButton"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:backgroundTint="@color/light_gray"
            android:text="@string/view_materials_button"
            android:textColor="@color/primary_blue"
            android:textSize="14sp" />

    </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

